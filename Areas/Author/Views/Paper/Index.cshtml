@model IEnumerable<Do_An.Models.Paper>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Author/Views/Shared/_LayoutAuthor.cshtml";
}

@section Styles {
    <style>
        footer p {
            text-align: center;
            margin: 0;
        }
    </style>
}

<style>
    p a {
        text-decoration: none;
        background: #990000;
        color: #fff;
        cursor: pointer;
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 11pt;
        border-radius: 4pt;
        min-width: 120pt;
        height: 20pt;
        padding: 2pt 10pt 1pt 10pt;
    }

    p a:hover {
        color: #fff;
    }

    .summary {
        border-left: 0px #800 solid;
        padding: 20px 25px 15px 42px;
        color: #333;
        font-size: 13px;
        line-height: 1.25;
        width: 100%;
        font-family: Verdana, sans-serif;
        background: #f6f4f2;
        background-position: bottom left;
    }
</style>

