<p>Your existing preprints are shown below.</p>

@{
    var user = Session["User"] as Do_An.Models.User;
    int index = 1;
}

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Authors</th>
                <th scope="col">Title</th>
                <th scope="col">When published</th>
                <th scope="col">Access</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@index++</th>
                    <td>
                        -
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        -
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PaperID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PaperID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PaperID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
